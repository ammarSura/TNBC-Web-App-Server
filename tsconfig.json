{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "allowJs": true,
      "checkJs": false,
      "outDir": ".build",
      "strict": false,
      "strictNullChecks": true,
      "noImplicitThis": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": false,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "lib": [ "es2022" ],
      "sourceMap": true
    },
    "include": [
      "src/**.ts", "src/utils/initialise-api.ts",
    ],
    "exclude": [
      "node_modules", 
      "src/tests",
      "src/migrations"
    ]
  }